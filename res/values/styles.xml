<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CharKey">
        <item name="android:layout_width">@dimen/key_char_width</item>
        <item name="android:layout_height">@dimen/key_char_height</item>
        <item name="android:background">@drawable/keypress_bg</item>
    </style>
    
    <style name="DeleteKey">
        <item name="android:background">@drawable/delete_key</item>
        <item name="android:layout_marginLeft">@dimen/delete_key_left_gap</item>
    </style>
    
    <style name="ModeKey">
        <item name="android:layout_width">@dimen/mode_key_width</item>
        <item name="android:layout_height">@dimen/mode_key_height</item>
        <item name="android:background">@drawable/keypress_bg</item>
        <item name="android:layout_marginRight">@dimen/mode_key_right_gap</item>
    </style>
    
    <style name="CharKey.Internal">
        <item name="android:layout_marginLeft">@dimen/key_char_gap</item>
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>